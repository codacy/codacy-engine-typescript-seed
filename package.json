{
  "name": "codacy-seed",
  "version": "0.0.1",
  "description": "Library to create Codacy Tools in Typescript",
  "keywords": [
    "codacy",
    "linter",
    "typescript"
  ],
  "homepage": "https://github.com/codacy/codacy-engine-typescript-seed#readme",
  "bugs": {
    "url": "https://github.com/codacy/codacy-engine-typescript-seed/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codacy/codacy-engine-typescript-seed.git"
  },
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "typings": "dist/src/index.d.js",
  "directories": {
    "test": "./src/test",
    "src": "./src"
  },
  "scripts": {
    "compile": "tsc",
    "test": "mocha"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "package.json": [
      "sort-package-json",
      "git add"
    ],
    "src/*.{ts,js,css,json,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "trailingComma": "none"
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "require": "ts-node/register",
    "spec": "src/test/**/*.spec.ts"
  },
  "dependencies": {
    "@nodelib/fs.walk": "^1.2.4",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.6",
    "@types/node-fetch": "^2.5.7",
    "@types/simple-mock": "^0.8.1",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "eslint-plugin-unused-imports": "^0.1.3",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.2",
    "mocha": "^7.1.2",
    "prettier": "^2.0.5",
    "simple-mock": "^0.8.0",
    "sort-package-json": "^1.42.2",
    "ts-loader": "^6.2.2",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2"
  }
}
